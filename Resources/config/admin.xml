<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">


    <parameters>
        <parameter key="raindrop_locale.country.class">Raindrop\LocaleBundle\Entity\Country</parameter>
        <parameter key="raindrop_locale.country.admin.class">Raindrop\LocaleBundle\Admin\Entity\CountryAdmin</parameter>
        <parameter key="raindrop_locale.language.class">Raindrop\LocaleBundle\Entity\Language</parameter>
        <parameter key="raindrop_locale.language.admin.class">Raindrop\LocaleBundle\Admin\Entity\LanguageAdmin</parameter>
        <parameter key="raindrop_locale.international.class">Raindrop\LocaleBundle\Entity\International</parameter>
        <parameter key="raindrop_locale.international.admin.class">Raindrop\LocaleBundle\Admin\Entity\InternationalAdmin</parameter>
    </parameters>

    <services>
       <service id="raindrop_locale.country.admin" class="%raindrop_locale.country.admin.class%">

          <argument />
          <argument>%raindrop_locale.country.class%</argument>
          <argument>SonataAdminBundle:CRUD</argument>

          <tag name="sonata.admin" manager_type="orm" group="Country" label="Country"/>

      </service>
       
       <service id="raindrop_locale.language.admin" class="%raindrop_locale.language.admin.class%">

          <argument />
          <argument>%raindrop_locale.language.class%</argument>
          <argument>SonataAdminBundle:CRUD</argument>

          <tag name="sonata.admin" manager_type="orm" group="Country" label="Language"/>

      </service>

       <service id="raindrop_locale.international.admin" class="%raindrop_locale.international.admin.class%">

          <argument />
          <argument>%raindrop_locale.international.class%</argument>
          <argument>SonataAdminBundle:CRUD</argument>

          <tag name="sonata.admin" manager_type="orm" group="Country" label="International"/>

      </service>
    </services>

</container>
