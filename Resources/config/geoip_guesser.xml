<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="raindrop_locale.geoip_guesser.class">Raindrop\LocaleBundle\LocaleGuesser\GeoipLocaleGuesser</parameter>
    </parameters>

    <services>

        <service id="raindrop_locale.geoip_guesser" class="%raindrop_locale.geoip_guesser.class%">
            <argument type="service" id="raindrop_locale.validator.meta" />
            <argument type="service" id="raindrop.geoip" />

            <call method="setEventDispatcher">
                <argument type="service" id="event_dispatcher"/>
            </call>

            <tag name="raindrop_locale.guesser" alias="geoip" />
        </service>

    </services>
</container>
