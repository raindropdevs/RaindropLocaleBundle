<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="raindrop_locale.geoip_guesser.class">Raindrop\LocaleBundle\LocaleGuesser\GeoipLocaleGuesser</parameter>
        <parameter key="raindrop_locale.geoip_listener.class">Raindrop\LocaleBundle\EventListener\GeoipListener</parameter>
    </parameters>

    <services>

        <service id="raindrop_locale.geoip_guesser" class="%raindrop_locale.geoip_guesser.class%">
            <argument type="service" id="raindrop_locale.validator.meta" />
            <argument type="service" id="raindrop.geoip" />

            <call method="setEventDispatcher">
                <argument type="service" id="event_dispatcher"/>
            </call>

            <tag name="raindrop_locale.guesser" alias="geoip" />
        </service>

        <service id="raindrop_locale.geoip_listener" class="%raindrop_locale.geoip_listener.class%">
            <argument type="service" id="logger" />
            <argument type="service" id="router"/>
            <argument type="service" id="session"/>
            <argument>%raindrop_locale.session.variable%</argument>

            <call method="setEventDispatcher">
                <argument type="service" id="event_dispatcher"/>
            </call>

            <call method="setGeoipManager">
                <argument type="service" id="raindrop.geoip" />
            </call>

            <call method="setAllowedLocalesProvider">
                <argument type="service" id="raindrop_locale.allowed_locales.provider" />
            </call>

            <call method="setGeoipParameters">
                <argument>%raindrop_locale.geoip.redirect_to_choose_country_route%</argument>
                <argument>%raindrop_locale.geoip.international_country_code%</argument>
            </call>

            <tag name="kernel.event_subscriber"/>
        </service>

    </services>
</container>
